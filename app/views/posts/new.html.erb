<%= turbo_frame_tag 'input_post' do %>
  <h2>New Post</h2>

  <%= form_with(url: posts_path, model: @post, method: :post) do |form| %>
    <%= render 'form', post: @post, form: form %>

    <div class="actions mb-3">
      <%= form.submit 'Create' %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', posts_path %>
