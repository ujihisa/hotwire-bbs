<h1>New Post</h1>

<%= turbo_frame_tag 'new_post', target: '_top' do %>
  <%= form_with(url: posts_path, model: @post, method: :post) do |form| %>
    <%= render 'form', post: @post, form: form %>

    <div class="actions mb-3">
      <%= form.submit 'Create' %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', posts_path %>
