<h1>Editing Post</h1>

<%= turbo_frame_tag 'post' do %>
  <%= form_with(url: post_path(@post.id), model: @post, method: :put) do |form| %>
    <%= render 'form', post: @post, form: form %>

    <div class="actions mb-3">
      <%= form.submit 'Update' %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
