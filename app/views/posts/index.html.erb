<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_frame_tag 'post', target: '_top' do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post_path(post.id) %></td>
          <td>
            <%= form_with(url: post_path(post.id), method: :delete, html: {onsubmit: 'return confirm("Do you really want to submit the form?");'}) do |form| %>
              <%= form.submit 'Destroy' %>
            <%- end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Post', new_post_path %>
