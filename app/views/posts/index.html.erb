<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_frame_tag 'new_post', src: new_post_path, target: '_top' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post_path(post.id) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
