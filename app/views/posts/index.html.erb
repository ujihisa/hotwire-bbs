<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_frame_tag 'post', target: '_top' do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Body</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Post', new_post_path %>
