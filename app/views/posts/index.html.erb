<h1>Posts</h1>

<%= turbo_frame_tag 'post_table' do %>
  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Body</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <%= render(partial: 'post', locals: { post: post }) %>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Post', new_post_path %>
